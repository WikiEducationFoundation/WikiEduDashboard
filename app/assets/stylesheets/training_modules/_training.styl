.wiki_training

.training__intro
  col(8/12)

.training__toc-container
  col(4/12)
  ol
    counter-reset item
  li
    margin 0 0 1.5em
    padding 0 0 0 25px
    list-style-type none
    counter-increment item
    text-indent -25px
    font-size: 16.5px
    &:before
      display inline-block
      width 1em
      padding-right 0.5em
      font-weight bold
      text-align right
      content counter(item) "."
    h3
      display inline
    p
      text-indent 0

.training__toc
  list-style none
  li
    margin 1em 0
    padding 1em
    border 1px solid mercury

.training__toc-inner
  padding-left 4em

.training__toc-progress
  border 2px solid mercury
  display block
  padding-top 1em
  width 30px
  height 30px
  border-radius 100px
  float left
  position relative
  top 20px

.training__header
  margin 2em 0

.training__categories
  list-style none
  margin-left 0
  padding-left 0
  col(12/12)
  & > li
    border-top 1px solid gray
    padding 2em 0
    margin-left 0
    display inline-block
    width 100%

.training__category__header
  col(4/12)

.training__categories__modules
  col(8/12)
  list-style none
  li
    margin 0 0 30px
    background white
    &:first-of-type
      margin-top 0
  a
    text-decoration none
    &:hover
      header
        background $wiki_brand_dk
      .icon img
        left 4px
      p
        box-shadow 0px 1px 6px rgba(0, 0, 0, 0.25)
  .icon
    float right
    padding 10px
    width 45px
    height 45px
    background $wiki_brand_dk
    img
      position relative
      left 0
      width 20px
      transition left 0.125s
  header
    padding 0
    height 45px
    text-align left
    background $wiki_brand
    transition background 0.075s
  h3
    color $btn_text_color
    font-weight 400
    float left
    padding 12px
    width 90%
    @extends .truncated-text
  p
    padding 20px 12px
    box-shadow 0px 1px 6px rgba(0, 0, 0, 0.1)
    transition box-shadow 0.075s


.training-intro__header
  text-align left

.container.training header
  text-align left

