.wiki_training

.training__intro
  col(8/12)

.training__toc-container
  col(4/12)
  ol
    counter-reset item
  a
    text-decoration none
    color $type_dark
  li
    margin 0 0 1.5em
    padding 0 0 0 25px
    list-style-type none
    counter-increment item
    text-indent -25px
    font-size: 16.5px
    &:before
      display inline-block
      width 1em
      padding-right 0.5em
      font-weight bold
      text-align right
      content counter(item) "."
    h3
      display inline
    p
      text-indent 0

.training__toc
  list-style none
  li
    margin 1em 0
    padding 1em
    border 1px solid mercury

.training__toc-inner
  padding-left 4em

.training__toc-progress
  border 2px solid mercury
  display block
  padding-top 1em
  width 30px
  height 30px
  border-radius 100px
  float left
  position relative
  top 20px

.training__header
  margin 0 0 2em

.training__categories
  list-style none
  margin-left 0
  padding-left 0
  col(12/12)
  & > li
    border-top 1px solid gray
    padding 2em 0
    margin-left 0
    display inline-block
    width 100%

.training__category__header
  col(4/12)
  h2
    text-transform uppercase

.training__categories__modules
  col(8/12)
  list-style none
  li
    margin 0 0 30px
    background white
    &:first-of-type
      margin-top 0

.training-intro__header
  text-align left

.container.training header
  text-align left

.training-libraries
  col(12/12)
.training-libraries__individual-library
  col(6/12)
