.training__slide header
  padding 10px 0
  display inline-block

.training__slide__content, .training__slide h1, .training__slide__footer, .training__slide__title-prefix
  margin-left auto
  margin-right auto
  max-width $slide_inner_content_width

.training__slide__content
  margin-top 30px
  margin-bottom 30px
  display table
  table-layout fixed
  width $slide_inner_content_width
  +below($desktop)
    width 100%
  // youtube videos
  iframe
    +above($desktop)
      width 100%
      height 421px


.training__slide .h3
  margin-bottom 21px

.training__slide__content h1
  font-size 41px

.training__slide__title-prefix
  font-size 21px
  color $training_primary
  margin-bottom 0
  font-weight 400

.training__slide__notification
  background-color #ffcc99
  padding 10px
  text-align center
  font-size 15px
  margin-top -20px
  margin-bottom 20px
  > .container
    display flex
    align-items center
    p
      flex 1
      margin-bottom 0

.training__slide figure
  padding 10px
  border 1px solid $border_med_lt
  display table
  /* fix Firefox weirdness */
  table-layout fixed
  margin 0 auto 21px auto
  figcaption
    font-size 14px
    text-align center
    &.image-credit
      color $type_light
      font-size 10px
      a
        color $type_light
  &.alt-layout-50
    width 50%
    figcaption
      text-align right
  &.alt-layout-30-right
    width 30%
    float right
    margin-left 20px
    margin-bottom 10px
    figcaption
      text-align right
  &.alt-layout-30-left
    width 30%
    float left
    margin-right 20px
    margin-bottom 10px
    figcaption
      text-align right
  &.alt-layout-40-right
    width 40%
    float right
    margin-left 20px
    margin-bottom 10px
    figcaption
      text-align right
  &.alt-layout-40-left
    width 40%
    float left
    margin-right 20px
    margin-bottom 10px
    figcaption
      text-align right
  &.alt-layout-100
    width 100%

.training__slide footer
  width 100%
  border-top 1px solid $border_med
  margin-top 20px
  padding-top 28px
  font-size 16px
  font-family $headline_font
  position relative
  span
    position relative
    width 80%
    &.pull-right a
      right 0
    &.pull-left a
      left 0


.training-loader
  margin 100px auto
  color $type_light
  text-align center

.training-loader__spinner
  margin 60px auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 2px solid #fff
  border-right 2px solid #fff
  border-bottom 2px solid #fff
  border-left 2px solid $training_primary
  transform translateZ(0)
  animation load 0.5s infinite linear

.training-loader__spinner,
.training-loader__spinner:after
  border-radius 50%
  width 60px
  height 60px

@keyframes load {
  0% {
    transform rotate(0deg)
  }
  100% {
    transform rotate(360deg)
  }
}
