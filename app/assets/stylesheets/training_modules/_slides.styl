$slide_inner_content_width = 800px

.training__slide header
  padding 10px 0
  border-bottom 1px solid $border
  display inline-block

.training__slide__content
  margin 30px auto
  max-width $slide_inner_content_width


.training__slide__footer
  display inline-block
  width 100%
  border-top 1px solid $border
  margin-top 20px
  padding-top 20px

.slide__menu__nav
  float left
  position absolute
  right 0
  background rgba(0,0,0,0.8)
  color #fff
  padding 15px
  width 250px
  li
    @extends .truncated-text
    font-size 15px
    line-height 21px
    margin-left 0
    &.current
      font-weight bold
      pointer-events none

.training__slide__quiz
  width $slide_inner_content_width
  margin 0 auto
  ul
    list-style none
    padding-left 0
    margin-left 0
  li
    margin-left 0
    padding-left 0
    &.revealed
      padding 10px
      background $body_bg - 15
  label
    cursor pointer
  input[type=radio]
    margin-right 8px
    -webkit-appearance radio
  button
    margin-top 20px

.assessment__answer-explanation
  margin-left 23px
  font-size 90%
  &.correct
    color $success
  &.incorrect
    color $warning
