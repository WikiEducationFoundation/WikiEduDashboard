.training__slide header
  padding 10px 0
  display inline-block

.training__slide__content, .training__slide .h3, .training__slide__footer
  margin-left auto
  margin-right auto
  max-width $slide_inner_content_width

.training__slide__content
  margin-top 30px
  margin-bottom 30px

.training__slide .h3
  margin-bottom 21px

.training__slide footer
  width 100%
  border-top 1px solid $border_med
  margin-top 20px
  padding-top 28px
  font-size 16px
  font-family $headline_font
  span
    position relative
    width 100%
    &.pull-right a
      right 0
    &.pull-left a
      left 0


