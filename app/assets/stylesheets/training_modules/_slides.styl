.training__slide header
  padding 10px 0
  display inline-block

.training__slide__content, .training__slide h1, .training__slide__footer
  margin-left auto
  margin-right auto
  max-width $slide_inner_content_width

.training__slide__content
  margin-top 30px
  margin-bottom 30px

.training__slide .h3
  margin-bottom 21px

.training__slide footer
  width 100%
  border-top 1px solid $border_med
  margin-top 20px
  padding-top 28px
  font-size 16px
  font-family $headline_font
  position relative
  span
    position relative
    width 100%
    &.pull-right a
      right 0
    &.pull-left a
      left 0


.training-loader
  margin 100px auto
  color $type_light
  text-align center

.training-loader__spinner
  margin 60px auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 2px solid #fff
  border-right 2px solid #fff
  border-bottom 2px solid #fff
  border-left 2px solid $training_primary
  transform translateZ(0)
  animation load 0.5s infinite linear

.training-loader__spinner,
.training-loader__spinner:after
  border-radius 50%
  width 60px
  height 60px

@keyframes load {
  0% {
    transform rotate(0deg)
  }
  100% {
    transform rotate(360deg)
  }
}

.arrow-key-helper
  position absolute
  background url('../images/arrow_key_helper.svg') center center no-repeat
  width 176px
  height 110px
  right -23px
  top 96px
