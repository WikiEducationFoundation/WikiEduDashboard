header.site-header
  overflow hidden
  width 100%
  z-index 100
  padding 15px
  border-bottom 1px solid $border_lt
  height 70px
  a
    text-decoration none

.logo
  float left
  font-size 0
  width 40px
  position relative
  bottom 5px
  .logo__link
    display inline-block
    font-size 0
    &:hover
      border-bottom 0
    img
      width 40px
      height 40px

.home
  clear none
  float left
  margin-left 10px
  p
    font-size 15px
    margin 5px auto
    padding 5px
    +above(desktop)
      margin 0
    a.inline:last-child
      margin-left 8px

.login
  @extends .home
  float right


body.training .breadcrumbs
  margin 0

.training__slide__nav h3 a
  color #fff
  text-decoration none

.breadcrumbs
  list-style none
  font-size 15px
  li
    display inline
    margin 0

.training__slide-header
  padding 12px 16px 16px 16px
  height 55px
  background $training_primary
  ol.breadcrumbs
    @extends .breadcrumbs
    color $breadcrumb_light_text
    text-align left
    margin-top 4px
    a
      color #fff
      text-decoration none
      font-weight 600
      letter-spacing 1px
      &:hover
        text-decoration underline
    li
      color #fff
      &:first-child a
        color $breadcrumb_light_text
        font-weight 400
        letter-spacing 0

.training__show
  ol.breadcrumbs
    @extends .breadcrumbs
    margin-bottom -23px
    li
      margin-left 0
      padding-left 0
    a
      color $type_light
      font-size 15px



a.slide-nav
  max-width 45%
  display block
  position absolute
  @extends .truncated-text

.training__slide__nav
  cursor pointer
  display inline-block
  position absolute
  right 6px
  top 70px
  color #fff
  height 55px
  width 192px
  padding 19px 12px 12px 12px
  h3
    font-weight 400
    font-size 15px
    letter-spacing 0.35px

.dropdown__close
  cursor pointer
  position absolute
  top 11px
  right 10px
  font-size 23px
  font-weight 500

.hamburger
  margin 2px 0 0 10px

.hamburger__bar
  background #fff
  display block
  height 2px
  width 14px
  margin 2px

.slide__menu__nav__dropdown
  float left
  position absolute
  top 70px
  right 16px
  background $light_bg
  padding 5px 0
  width 275px
  box-shadow 3px 3px 6px rgba(0,0,0,0.3)
  z-index 999
  h1
    margin-bottom 15px
    padding 16px 16px 0
  li
    @extends .truncated-text
    font-size 17px
    line-height 21px
    margin 10px 0
    padding-left 0
    border-top 2px solid $border_lightest
    padding 14px 15px 5px 15px
    color $type_dark
    font-weight 400
    &.current
      font-weight 600
      pointer-events none
      color $training_primary
      a
        color $training_primary
    a
      color $type_dark
      text-decoration none
      &:hover
        text-decoration underline

