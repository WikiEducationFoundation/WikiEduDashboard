body > .container
  +above(desktop)
    padding-bottom 80px

.container
  clearfix()
  max-width 1100px
  margin 0 auto
  padding 0
  .container
    padding 0

header .container
  center(1100px)
main .container
  center(1100px)

main > .container
  margin-top 35px


  +above(1140px)
    padding 0

  &.narrow
    center(800px)


main
  background-color transparent
  border-width 0 1px
  padding-bottom 80px

header
  padding 20px 0
  text-align center
  width 100%
  .title
    padding 0 20px

footer
  padding 10
  text-align center
  font-size 50%
  .container
    padding-bottom 10px

.footer, .push
  height 30px

.wrapper
  min-height 100%
  margin 0 auto -30px

.section-header
  overflow hidden
  padding 20px 0 20px
  position relative
  h3
    color dove

  +above(tablet)
    padding 20px 0 0

  +above(desktop)
    padding 20px 0

section
  position relative

.details
  padding-top 20px
  overflow hidden
  text-align left
  span(1)
  .details__detail
    span(1/2)
    padding 20px 0
    text-align left
    +above(desktop)
      span(1/5)
      text-align left
    &:last-child
      span(2/5)
      text-align left
    h6
      font-family body-font
      font-size 15px
    p
      color white
      font-size 15px
      font-weight
      a:hover
        color white

.hidden
  display none !important

.text-center
  text-align center

.notification
  background-color #00B492
  padding 10px
  color #fff
  text-align center
  font-weight 600
  font-size 0.7em
  height 40px

  a
    color #fff
