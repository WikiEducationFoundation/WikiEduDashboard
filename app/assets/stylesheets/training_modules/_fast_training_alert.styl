.blur-backdrop-for-alert-box
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0, 0, 0, 0.4)
  display: flex
  justify-content: center
  align-items: center
  z-index: 2
.alert-box-container
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.5)
  z-index: 999
  text-align: left
  .alert-box
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    background: white
    padding: 20px
    border-radius: 5px
    box-shadow: 0px 0px 10px #ccc
    z-index: 1000
    text-align: left
    h2
     font-weight: 500
     text-align: left
     font-size: 20px
     margin: 20px 0
     color: #333
    p
      text-align: left
      font-weight: 200
      font-size: 16px
      color: rgb(111, 111, 111)
    div
      text-align: right
      button
        color: green
        padding: 10px 20px
        font-size: 1.0em
        border-radius: 500px
        border: none
        margin: 0 auto
        cursor: pointer
        background: transparent
