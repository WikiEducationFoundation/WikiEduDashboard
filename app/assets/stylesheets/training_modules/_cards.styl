.action-card
  display block
  margin-bottom 30px
  text-decoration none
  &:hover
    header
      background $training_primary
    .action-card-icon
      background-position 85% 50%
    p
      box-shadow 0px 1px 6px rgba(0, 0, 0, 0.25)
.action-card-icon
  float right
  padding 10px
  width 45px
  height 45px
  background $training_primary_dk url('../images/rt_arrow_icon.svg') 50% center no-repeat
  transition background-position 0.125s
.action-card-header
  padding 0
  height 45px
  text-align left
  background $training_primary
  transition background 0.075s
.action-card-title
  color $btn_text_color
  font-weight 400
  float left
  padding 12px
  width 90%
  font-size 18px
  @extends .truncated-text
.action-card-text
  font-size 16px
  font-weight 400
  padding 20px 12px
  box-shadow 0px 1px 6px rgba(0, 0, 0, 0.1)
  transition box-shadow 0.075s
  color $card_type_color
