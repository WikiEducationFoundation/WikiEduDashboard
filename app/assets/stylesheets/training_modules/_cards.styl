.action-card
  display block
  margin-bottom 30px
  text-decoration none
  &:hover
    header
      background $training_primary_dk
    .action-card-icon
      left 8px
    p
      box-shadow 0px 1px 6px rgba(0, 0, 0, 0.25)

.icon-container
  background $training_primary_dk
  float right
  padding 10px
  width 45px
  height 45px
.action-card-icon
  transition left 0.125s
  color #fff
  position relative
  left 3px
  &:before
    right 0
    position relative
    top 1px
.action-card-header
  padding 0
  height 45px
  text-align left
  background $training_primary
  transition background 0.075s
  position relative
.action-card-title
  color $btn_text_color
  font-weight 400
  float left
  padding 12px
  width 90%
  font-size 18px
  @extends .truncated-text
.action-card-text
  font-size 16px
  font-weight 400
  padding 20px 12px
  box-shadow 0px 1px 6px rgba(0, 0, 0, 0.1)
  transition box-shadow 0.075s
  color $card_type_color
  small
    text-align left
