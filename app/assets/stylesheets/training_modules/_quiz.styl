.training__slide__quiz
  width $slide_inner_content_width
  margin 0 auto
  ul
    list-style none
    padding-left 0
    margin-left 0
  li
    margin-left 0
    padding-left 0
    &.revealed
      padding 10px
      position relative
      right 11px
      &.correct
        background $success_bg
      &.incorrect
        background $warning_bg

  label
    cursor pointer
    display inline-block
  span
    float left
    width 85%
  input[type=radio]
    margin-right 8px
    -webkit-appearance radio
    float left
    position relative
    top 8px
  button
    margin-top 20px

.assessment__answer-explanation
  margin-left 23px
  font-size 14px
  &.correct
    color $success_text
    font-weight bold
  &.incorrect
    color $warning_text
    font-weight bold

