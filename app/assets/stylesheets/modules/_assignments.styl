.table tr.assignment td
  border none
  padding 10px 20px
  .title
    overflow-wrap anywhere

.table tr.assignment-section-header td
  border none
  padding-bottom 10px

tr.assignment-section-header h3
  font-size 16px
  margin-bottom 0

.assignment-popover
  tr.assignment
    td
      width 100%
      display flex
      a
        max-width 500px
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

.find-articles-section
  background athens
  border-top 1px solid darken(athens, 10%)
  text-align center
  td
    display block
    width 100%

.select-container
  display flex
  flex-direction column

.edit_sandbox_url_input
  min-width: 30rem;

.edit-sandbox-username-form
  padding 10px 0

  .instruction-text
    font-size 14px
    color $text
    line-height 1.4
    margin-bottom 10px

  .input-group
    display flex
    flex-direction column
    gap 5px

  .input-label
    font-weight 600
    font-size 13px
    color $text_dk

  .error-message
    color warning
    font-size 13px
    padding 8px 12px
    background-color $warning-background
    border-left 3px solid warning
    margin-top 5px

  .preview-section
    background-color smoke
    padding 12px
    border 1px solid $border_lt
    margin-top 10px

    .preview-label
      font-weight 600
      font-size 13px
      margin-bottom 8px

    .preview-url
      margin-top 8px
      
      .url-type
        font-size 12px
        font-weight 600
        color $text

      .url-value
        font-size 11px
        color $action
        word-break break-all
        font-family monospace
        padding 4px
        background-color white
        margin-top 2px

  button[type="submit"]
    margin-top 10px
    
    &:disabled
      opacity 0.5
      cursor not-allowed