nav.top-nav
  top 0
  z-index 100
  background-color white
  border-bottom 1px solid rgba(0,0,0,.1)
  overflow hidden
  width 100%
  font-size 15px
  -webkit-font-smoothing auto
  line-height 1

  &.fluid
    .container
      max-width none
      padding-left 15px
      padding-right 15px

  ul
    list-style none
    margin-left 0
    margin-bottom 0
    padding 0

  li > a
    text-decoration none
    color inherit
    padding 25px 0 15px 0
    font-size 15px
    &:hover, &.active
      color $brand_primary
      border-bottom 3px solid $brand_primary


  .container
    height $nav_height
    display flex
    align-items center
    justify-content space-around

.top-nav__faq-search ~ .top-nav__login-links
  margin-left 0

.login-links
  display flex
  justify-content flex-end
  margin-left auto
  b
    +below(desktop)
      display none
  i
    margin-right 4px
    margin-bottom: -1px;
    display: inline-block;
    font-size 16px
    vertical-align middle

  .expand
    overflow hidden
    display inline-block
    width 0
    transition all 250ms ease-in-out
    opacity 0
    vertical-align top
    white-space nowrap
    text-align left

    +below(desktop)
      display none

  li > a
    color $text
    border-bottom 0
    +below(desktop)
      margin-left 0

    &:hover
      color $brand_primary
      .expand
        opacity 1
        width 110px

.top-nav__main-links
  display flex
  justify-content flex-start
  margin 0
  padding 0
  li
    margin-left 25px
  a
    margin 0

.top-nav__site-logo
  line-height 0
  a
    display inline-block
    margin 0
    border none

  img
    width 35px
    height 35px

.top-nav__faq-search
  margin-left auto
  text-align center
  border-left 1px solid lighten($border_lt, 40%)
  border-right 1px solid lighten($border_lt, 40%)
  > form > button
    vertical-align middle
    color #A0A0A0
    line-height $nav_height
    width 43px
    padding-right 10px
    margin-left -10px
  input[type="text"]
    vertical-align middle
    height $nav_height
    width 173px
    border none
    border-radius 0
    font-family inherit
    font-size 14px
    outline 0
    padding 10px
    -webkit-appearance none
    -webkit-font-smoothing: antialiased;

    &:-ms-input-placeholder
      color $text_md
    &::-moz-placeholder
      color $text_md
    &::-webkit-input-placeholder
      color $text_md

  +below(desktop)
    display none



body.fixed-nav
  padding-top $nav_height
  nav.top-nav
    position fixed

body.course-page nav.top-nav
  position relative

.course-nav__wrapper.affix
  margin-top -57px
  z-index 9999
  width 100%
  box-shadow 0 0 6px $text

nav
  text-align center
  +above(desktop)
    text-align left
  a.inline
    margin-left 8px
  .nav__item
    overflow hidden
    padding 0
    width 30%
    height 40px
    display inline-block
    +above(tablet)
      width auto
      padding-right 20px
    +above(desktop)
      float left
      display block
      width auto
      height 55px
      padding 0
      margin 0 20px
      text-align center
      &:first-child
        margin-left 0

    p
      color manatee
      font-size 14px
      letter-spacing .019em
      line-height 38px
      vertical-align middle
      padding 0
      +above(desktop)
        line-height 55px
        font-size 15px

    a
      text-decoration none
      color $text
    a.active,
    a:hover
      border-bottom 3px solid $brand_primary
      cursor pointer
      padding-bottom 15px
    a.active
      color $brand_primary
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px

.course_navigation
  background #fff
  > .container
    +above(desktop)
      display flex
    > a
      display block
      text-decoration none
      text-align center
      +above(desktop)
        max-width 370px
        margin-right 40px
        padding-right 40px
        text-align left
        border-right 1px solid lighten($border_lt, 20%)
      > h2
        font-size 18px
        font-weight 300
        margin-bottom 0
        white-space nowrap
        text-overflow ellipsis
        line-height 55px
        overflow hidden
        -webkit-font-smoothing auto

