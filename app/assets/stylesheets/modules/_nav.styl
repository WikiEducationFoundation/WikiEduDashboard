aside
  background-color white
  box-shadow 0px 1px 0 rgba(0,0,0,.1)
  position relative
  overflow hidden
  width 100%
  font-size 15px

  a
    text-decoration none
    margin-left 24px
    display inline-block
    border-bottom 2px solid transparent
    margin-bottom -2px
    color inherit
  a.active,
  a:hover
    border-bottom 2px solid bayoux

  .logo
    line-height 0
    a
      display inline-block
      margin 0
      border none

    img
      width 35px
      height 35px

  .container
    height $nav_height
    display flex
    align-items center
    justify-content space-around

  .home
    flex 1
  .search
    flex 1
    text-align center
    input[type="text"]
      width 180px
      border 1px solid $border_lt
      border-radius 0
      font-family inherit
      font-size inherit
      outline 0
      padding 10px
      -webkit-appearance none

    input[type="submit"]
      @extend aside a
      line-height inherit
      &:hover
        @extend aside a:hover


    +below(desktop)
      display none

  .login
    flex 1
    text-align right


body.fixed-nav
  padding-top $nav_height
  aside
    position fixed
    top 0
    z-index 100

nav
  a.inline
    margin-left 8px
  .nav__item
    overflow hidden
    padding 0
    width 30%
    height 40px
    display inline-block
    text-transform uppercase
    +above(tablet)
      width auto
      padding-right 20px
    +above(desktop)
      float left
      display block
      width auto
      height 80px
      padding 0
      margin 0 20px
      text-align center
      &:first-child
        margin-left 0

    p
      color manatee
      font-size 14px
      letter-spacing .019em
      line-height 38px
      vertical-align middle
      padding 0
      +above(desktop)
        line-height 78px
        font-size 15px

    a
      text-decoration none
    a.active,
    a:hover
      border-bottom 2px solid bayoux
      cursor pointer
      padding-bottom 3px
    a.active
      color bayoux
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px

.course_navigation
  background-color white
  height auto
  padding 15px 0
  +above(desktop)
    padding 0
  a
    color #696971
