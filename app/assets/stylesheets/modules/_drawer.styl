.drawer
  background-color white !important
  transition border 0.15s
  height 0
  min-height 0 !important
  overflow hidden
  transition height .2s
  width 100%

  .list__header
    p
      font-size 14px !important
      font-weight 500 !important
    h6
      color manatee

  .list .row
    margin 0

  .row
    border 1px solid mischka
    border-width 0 0 1px 0
    padding 10px 0
    &:first-child
      border-width 1px 0
    .row__wrapper
      border-bottom none
      padding 5px 20px !important

  .view-all
    border-top 1px solid mercury
    height 70px
    margin 0

.drawer_trigger
  cursor pointer
  &.disabled
    cursor initial
    .icon:before
      color zircon
  .icon:before
    font-size 12px
    font-weight bold
    margin-top 5px
    transform rotate(0deg)
    transition transform .2s
.open
  border-bottom 0
  .drawer_trigger__icon .icon:before
    transform rotate(-180deg)

.revision-list__row__link
  cursor pointer
  .icon:before
    font-size 6px
    font-weight bold
    line-height 4
    margin-left 5px

