fieldset
  display block


input, textarea, select, .expandingArea > pre
  background-color white
  border 1px solid border_lt
  border-radius 0
  font-family body-font
  color body-color
  font-size 15px
  outline 0
  padding 10px
  -webkit-appearance none
  -moz-appearance none

  &:focus
    border-color dove

  &::-ms-expand
    display none

input.invalid, label.invalid input
  border 2px solid warning !important

textarea
  resize vertical

p.graded
  clear both

pre
  margin 0
  padding 0
  border 0
  outline 0

.expandingArea
  position relative
  background-color white
  border 1px solid border_lt

  & > textarea, & > pre
    white-space pre-wrap
    word-wrap break-word
    border 0
    background transparent
    line-height 1.4

  & > textarea
    box-sizing border-box
    width 100%
    height 100px

  & > pre
    display none
    padding-bottom 20px

  &.active
    & > textarea
      overflow hidden
      top 0
      left 0
      height 100%
      resize none

    & > pre
      display block
      visibility hidden

      span
        float none


input[type=text], input[type=date], select
  height 40px

.input_wrapper
  overflow hidden
  &.inline
    vertical-align middle
    display inline-block
    > div
      display inline-block
    > span
    > .popover-trigger > span
      display inline-block
      margin-right 5px



.select_wrapper
  display inline-block
  overflow visible
  position relative
  select
    min-width 170px
  &:after
    content '\25BE'
    font-size 24px
    line-height 1
    margin-top -14px
    pointer-events none
    position absolute
    right 20px
    top 50%

