.gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  height: 250px;
  padding: 3px;
}

.gallery .upload {
  display: flex;
  height: 100%;
  position: relative;
  margin: 2px;
}

.upload img {
  height: 100%;
}

.upload .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 50%;
  width: 100%;
  position: absolute;
  bottom: 2px;
  background: rgba(0, 0, 0, 0.7);
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.9em;
  overflow: hidden;
}

.info p {
  margin: 2px 10px;
}

.info p.count {
  font-size: 1.5em;
  color: rgb(190, 151, 225);
}

.upload .info {
  display: none;
}

.upload:hover .info {
  display: flex;
}
