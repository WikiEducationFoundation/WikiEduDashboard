.gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  padding: 3px;
  margin-bottom: 50px;
}

.gallery .upload {
  height: 250px;
  position: relative;
  margin: 2px;
}

.upload img {
  height: 250px;
  object-fit: cover;
  max-width: 100%;
  min-width: 100%;
}

.upload .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  width: 100%;
  position: absolute;
  bottom: 2px;
  background: rgba(0, 0, 0, 0.5);
  color: rgba(255, 255, 255, 0.9);

  overflow: hidden;
}

.info p {
  margin: 2px 20px;
  text-shadow: 0px 4px 3px rgba(0,0,0,0.4),
             0px 8px 13px rgba(0,0,0,0.1),
             0px 18px 23px rgba(0,0,0,0.1);
}

.info p.usage {
  font-size: 1.5em;
  color: rgb(190, 151, 225);
}

.upload .info {
  display: none;
}

.upload:hover .info {
  display: flex;
}

.info p a {
  color: rgb(255, 255, 255);
}

.none {
  display: flex;
  width: 100%;
  height: 49px;
  background-color: rgb(255, 255, 255);
  border: 1px solid rgb(221, 221, 221);
}

.none p {
margin: auto;
}
