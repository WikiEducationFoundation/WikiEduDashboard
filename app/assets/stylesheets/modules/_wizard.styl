panel_speed = .4s
wizard-width = 860px

.wizard-enter
  opacity 0.01
  transition opacity .2s ease-in-out
  &.wizard-enter-active
    opacity 1
.wizard-leave
  opacity 1
  transition opacity .2s ease-in-out
  &.wizard-leave-active
    opacity 0.01

.wizard__panel-enter
  left 150% !important
  transition left panel_speed ease-in-out

.wizard
  background-color rgba(smoke, .95)
  bottom 0
  left 0
  max-height 100%
  overflow-x hidden
  overflow-y scroll
  padding-top 80px
  position fixed
  right 0
  text-align center
  top 0
  z-index 1
  .wizard__panel
    background-color white
    box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
    left -150%
    margin-bottom 20px
    max-width wizard-width
    min-height 600px
    opacity 0
    padding 20px 20px 81px
    position absolute
    text-align left
    top 160px
    transform translateX(-50%)
    transition left panel_speed ease-in-out, opacity .01s ease panel_speed, visibility .01s ease panel_speed
    width 100%
    visibility hidden
    &.active
      left 50%
      opacity 1
      transition left panel_speed ease-in-out, opacity .01s
      visibility visible
    &.active ~ .wizard__panel
      left 150%
    &.is-submitting
      opacity: 0.5
    > h3
      font-weight 300
    p, ul
      color dove
      a
        color blue-violet
        &:hover
          border-bottom 2px solid blue-violet
        &:active
          color manatee
          border-bottom 2px solid manatee
    .section-header
      padding 0
      .controls
        padding 0
    .wizard__form
      height 80%
      margin-top 20px
      p
        text-align left
      textarea
        height 189px
      input, textarea
        margin-bottom 10px
        width 100%
    .wizard__panel__options
      padding 20px 0
      .left, .right
        col(1/2)
    .wizard__option
      border 1px solid mischka
      cursor pointer
      margin-bottom 20px
      position relative
      text-align left
      transition all .2s ease-in-out
      &:hover
        background smoke
      &.selected
        .wizard__option__border
          border-color transparent
          box-shadow 0 0 0 4px bayoux inset
        .wizard__option__checkbox
          background-color bayoux
          border-color transparent
      &.half
        +above(desktop)
          col(1/2, cycle: 2)
      > button
        padding 20px
        width 100%
      &.summary
        border-top-width 0
        margin-bottom 0
        padding 20px
        width 100%
        &:first-child
          border-top-width 1px
      .edit
        margin-top -10px
        position absolute
        right 40px
        top 50%
      .wizard__option__border
        box-shadow 0 0 0 4px transparent inset
        height 100%
        left 0
        pointer-events none
        position absolute
        top 0
        transition all .2s ease-in-out
        width 100%
      .wizard__option__checkbox
        background url("../images/check.svg")
        background-position 45%
        background-repeat no-repeat
        background-size 60%
        border 1px solid mischka
        border-width 0 0 1px 1px
        height 30px
        position absolute
        right 0
        top 0
        transition all .2s ease-in-out
        width 30px
      .wizard__option__description
        border-top 1px solid transparent
        box-sizing content-box
        height 0
        margin-top 15px
        overflow hidden
        padding-bottom 18px
        transition all 0.2s ease-in-out
        width 100%
        &.open
          border-color mischka
          height auto
          padding 15px 0 33px
      .wizard__option__more
        background athens
        border-top 1px solid mischka
        bottom 0
        left 0
        padding 5px 0 7px
        position absolute
        transition all .2s ease-in-out
        width 100%
        &.open p:after
          transform rotate(-180deg)
        p
          color manatee
          text-align center
          &:after
            content "\E600"
            display inline-block
            font-family "icomoon"
            line-height 0
            margin-left 5px
            transition transform .2s
            vertical-align middle
        &:hover
          background mischka
      h3
        font-size 18px
        line-height 1.4
        margin-bottom 5px
        padding-right 30px
        text-align left
      p
        text-align left
        white-space pre-line
    .wizard__controls
      font-size 12px
      left 20px
      position absolute
      top -35px
      transition all 0.2s
      +above(880px)
        left 0
      a
        color dove
        margin-left 20px
        margin-right 10px
        &.icon:before
          margin-right 8px
          vertical-align middle
    .wizard__panel__controls
      background-color white
      border-top 1px solid mischka
      bottom 0
      padding 20px 0
      position absolute
      width calc(100% - 40px)
      .left
        col(1/3)
        padding 9px 0
        text-align left
        p
          font-size 14px
      .right
        col(2/3)
        text-align right
        div
          display inline-block
        p.red
          color burnt
  .section-header
    margin-bottom 10px

.column
  col(1/2)