.sandbox-link
  font-size: 80%

.users-control
  text-align right

.users-articles
  display flex
  aside.student-selection
    flex 1
    ul
      list-style none
      li.student
        background white
        border 1px solid #DDDDDD
        margin 5px 0
        padding 15px
        &.selected
          background #676eb4
          color white
        p
          margin-bottom 0
        .real-name
          font-weight bold
  article.student-details
    flex 4
    padding 5px 30px
    section.assignments
      h4
        color #6A6A6A
      p.assignment-links
        margin-bottom 3px
    .no-selected-student
      border 2px dashed #AAAAAA
      display flex
      flex-direction column
      padding 45px 15px
      text-align center
      h4
        margin-bottom 5px
  article.assignments-list
    font-size 12px
    aside.header
      display flex
      flex-direction row
      h3
        flex 1
        font-size 18px
        margin 10px 0
      .button-actions
        flex 2
        text-align right
    .no-assignments
      font-size 14px
      padding 30px
      text-align center
    h4.assignments-list-title
      margin 30px 0 0
    .current-status span
      color #676eb4
      font-weight bold
      padding 3px
.sort-select.users
  display inline-block
  float none
  margin 0 10px
  position static