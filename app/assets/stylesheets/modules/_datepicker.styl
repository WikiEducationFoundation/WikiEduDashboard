// align date and time controls side by side
.datetime-control
  display flex
  width fit-content

  .date-picker--form-group
    width auto

  .form-group
    width fit-content
    display inline-block

    .date-input
      max-width 120px
      margin-right 20px

    .time-input
      white-space nowrap

      // specificity to override overview/sidebar rules
      select
        width auto

.date-input
  position relative

.date-input input
  width 100%;

.date-input .rdp--hidden
  display none
  width 350px
  background white
  position absolute
  border-color #b8b8b8
  top -2px
  left 100%
  z-index 10
  box-shadow 0 0 10px rgba(0,0,0,0.2)

.day-selector{
  margin-bottom 20px
}

.date-input .rdp
  display block
  left: 100%;

.time-picker--form-group
  display inline-block

.time-input__hour
  margin-right 5px

.time-input__minute
  margin-left 5px
