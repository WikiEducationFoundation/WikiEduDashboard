// Information popover
.popover-trigger
  position relative
  &:hover
    .popover
      opacity 1
      top 110%
  p
    margin-bottom 0
  .popover
    background-color white
    border 1px solid manatee
    display none
    opacity 0
    padding 10px 15px
    pointer-events none
    position absolute
    top 125%
    left 15px
    transform translateZ(0)
    transition opacity .2s linear, top .2s linear
    white-space normal
    z-index 4
    +above(desktop)
      display block
    &.dark
      background-color manatee
      border 0
      &:before
        border-bottom 6px solid manatee
      p, h4
        margin-bottom 0
        color white !important
      h4
        font-weight 300
    h3
      color: boyoux
    &:before
      border-bottom 6px solid white
      border-right 6px solid transparent
      border-left 6px solid transparent
      top -6px
      content ''
      display block
      margin-left -6px
      position absolute
    h4
      color dove
    p
      color manatee
      font-size 11px
      line-height 1.4

.stat-display .popover
  left -15%
  width 130%
  &:before
    left 50%

.row .popover
  left 0
  width 150px
  &:before
    left 24px

// Interactive popover
.pop__container
  display inline-block
  position relative
  .pop
    background white
    border 1px solid mischka
    border-radius 3px
    box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
    left 50%
    opacity 0
    pointer-events none
    position absolute
    top calc(100% + 14px)
    transform translateX(-50%) translateY(-30px) scale(.7, .7)
    transition all .2s
    z-index 10
    &.open
      opacity 1
      pointer-events all
      transform translateX(-50%) translateY(0) scale(1, 1)
    &:before
      border-bottom 6px solid white
      border-right 6px solid transparent
      border-left 6px solid transparent
      content ''
      display block
      left 50%
      margin-left -3px
      position absolute
      top -6px
    tr.edit
      border-bottom 1px solid bayoux
    tr:last-child
      border-bottom none !important
    td
      height auto
      padding 20px
      white-space nowrap
      input
        margin-right 10px
        margin-top 0
        width inherit
      > *
        vertical-align middle
