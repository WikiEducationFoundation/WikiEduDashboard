#react_root
  &.timeline
    padding 10px
    a
      cursor pointer
    > li
      margin 0
    .view-all
      border-bottom 0
      margin-top 20px
  .week
    display block
    margin 0 0 30px
    position relative
    &:first-child
      margin-top 20px
    > div
      p
        border-bottom 1px solid dove
        color dove
        padding-bottom 5px
        margin-bottom 15px
      > .button
        float right
    .list
      margin-top 15px
  .week, .block
    +.view-all
      border-bottom 0
  .block +.view-all
    margin-top 20px
  .block
    background-color white
    border 1px solid zircon
    left 0
    margin 0 0 15px 0
    padding 18px 20px 20px
    position relative
    width 100%
    transition all .25s ease-out
    -moz-user-select none
    &:first-child
      border-width 1px
    &:last-child
      margin-bottom 0
    &.editable
      cursor move
      &:hover
        box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
      .drag-handle
        display block
    &.dragging
      opacity 0
      // transform scale(1.05)
    &.block-leave-active
      opacity 0
      transform scale(0.5)
    textarea
      width 100%
    input[type='text'], input[type='date'], select
      display inline-block
      margin-right 10px
      width 150px
      &.title
        width 200px
    input[type='checkbox']
      margin 20px 5px
    .button
      clear right
      float right
      margin 0
    .block-title--editing
      color inherit
      letter-spacing inherit
      line-height inherit
      font-weight inherit
      font-size inherit
    .block-title
      color dove

  .gradeable
    overflow hidden

.drag-handle
  display none
  left 0
  position absolute
  top 10px
  width 15px
  .drag-handle__bar
    background-color mercury
    height 3px
    margin-bottom 2px
    width 100%
    &:last-child
      margin-bottom 0

input[type="radio"]
  -webkit-appearance radio
input[type="checkbox"]
  -webkit-appearance checkbox

.block__training-modules
  margin-top 1.5em
  padding-top 1em
  table
    border-bottom 1px solid border_lt
  thead
    border-bottom 1px solid border_lt


.training-module
  border-bottom 1px solid border_lt
  padding-bottom 1em
  padding 12px 0
  td
    font-size 16px
  &:last-child
    margin-bottom 0
    border-bottom none
  .overdue
    color warning
  .completed
    color $success_text

.training-module__link
  margin-top 0.75em
  i
    font-size 14px
    position relative
    top 1px
    left 1px

.timeline-module__progress-complete
  color $success_text
  font-weight bold

