$brand_primary = #696BB1

body.home
  .hero
    background-color $brand_primary

    .container
      padding 60px 40px 80px 40px

    h1
      color #fff
      font-family "Source Sans Pro"
      font-size 54px
      line-height 1.4
      max-width 800px
      margin-bottom 60px

    .btn {
      display inline-block
      background: #fff;
      color: $brand_primary
      text-decoration none
      padding 11px 16px
      border-radius 2px
      font-weight 500
      margin-right 20px

      &.btn-ghost {
        color #fff
        background transparent
        border 1px solid #fff
      }
    }


