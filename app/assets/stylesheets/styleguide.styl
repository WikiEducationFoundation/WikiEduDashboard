@import "_shared"

.styleguide footer
  margin 40px 20px 30px 300px

.sg-section
  center(1100px)
  clearfix()
  border-radius 2px
  box-shadow 0px 1px 2px rgba(0,0,0,.2)
  background #fff
  padding 40px

.sg-section-title
  center(1100px)
  clearfix()
  padding-top 40px
  color #666

.sg-content
  margin-left 300px
  margin-right 20px

.sg-inverse
  display inline-block
  padding 20px
  background $brand_primary

.sg-note
  padding 15px
  border 1px solid rgba(229, 171, 40, 0.2)
  background-color rgba(229, 171, 40, 0.1)
  color rgb(206, 150, 24)
  font-weight 600
  border-radius 2px
  margin-top 16px
  margin-bottom 16px
  &:last-child
    margin-bottom 0
  &:first-child
    margin-top 0

.sg-nav
  position fixed
  left 0
  top 0
  bottom 0
  width 280px
  background $brand_primary
  color #fff

  .logo
    margin 40px 20px
    img
      width 35px
      vertical-align middle
      margin-right 8px
    span
      vertical-align middle
      font-size 18px
      font-weight 600

  ul
    list-style none

    li
      margin-left 0

      a
        text-decoration none
        color #fff
        display block
        padding 3px 20px

        &:hover
          background-color rgba(255,255,255,.2)
