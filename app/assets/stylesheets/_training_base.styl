/* /////////////////////////////////////////////////////

BASE STYLES
Only single elements. No classes or ids.

///////////////////////////////////////////////////// */


*
  box-sizing border-box

html
  -webkit-text-size-adjust 100%
  height 100%
  font-size 0.938em

body
  background-color $body_bg
  font $body_font_size/$body_leading $body_font
  font-weight $body_font_weight
  width 100%
  height 100%
  color $type_dark
  letter-spacing $body_letter_spacing
  &.modal-open
    overflow hidden

h1
h2
h3
h4
h5
  letter-spacing .02em
  color $type_dark
  margin 0 0 16px 0
  line-height 1.2
  font-weight 700

h1
  margin-top 0
  font-size 22px
  small
    font-size 17px
    letter-spacing 0.05em
    text-transform uppercase
    color $type_dark + 15
h2
  font-size 22px

h3
  font-size 17px
  margin-bottom 5px
  small
    font-size 14.5px
    font-weight 400

h4
  font-size 16px

h5
  font-size 1em

p
  margin-bottom 16px

small
  font-size 0.8em
  display inline-block
  text-align center

p
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

i
  font-style italic

li
  margin-left 20px

  &:first-child
    margin-top 0

ul
  list-style disc
  margin-bottom 16px
  &:last-child
    margin-bottom 0

ol
  list-style decimal
  margin-bottom 16px
  &:last-child
    margin-bottom 0


blockquote
  margin-bottom 16px
  border-left: 4px solid #eee
  padding 0 1em

code
  display inline-block
  font-size 0.8em
  font-family Courier, monospace
  background-color rgba(0,0,0,0.04)
  border-radius 3px
  line-height 1.4
  padding .2em

pre > code
  display block
  font-size 0.8em
  padding 1em 1em
  margin-bottom 16px

hr
  border 1px solid $border
  border-width 1px 0 0
  height 1px
  clear both
  margin-bottom 16px

a
  color $wiki_brand
  text-decoration underline
  outline 0
  &:hover
    color $wiki_brand - 20
  &:active
    color $wiki_brand
  &.inline
    color inherit

em
  font-style italic

select
  font-size 15px !important

b, strong
  font-weight 600
