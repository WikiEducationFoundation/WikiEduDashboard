body.survey-page
  background-color $survey_background
  background-size cover

  // *:focus
  //   border 1px solid red !important
  //   background rgba(red, .1) !important
  //   z-index 999
  //   opacity 1
  //   visibility visible
  .simple_form
    margin 0

  h1, h3
    color $text_dk

  .notice
    background-color sprout

  .p
    padding $spacer

  .py
    padding-top $spacer
    padding-bottom $spacer

  .px
    padding-left $spacer
    padding-right $spacer

  .form-inputs
    margin-bottom $spacer

  .block input[type=text],
  .block textarea,
  .block > div
    font-size 17px
    line-height 24px

  .question-type--radio,
  .question-type--checkbox
    a[target='_blank']
      margin-right 4px
    a[target='_blank']:after
      font-family "icons"
      content "\EA10"
      display inline-block
      position relative
      margin-left 4px
      top -3px
      z-index 5
      font-size 8px

  // .block.disabled
  //   opacity .5
  //   z-index 1
  //
  // .block.not-seen
  //   opacity 0
  //
  // .block.block--errors
  //   opacity 1



  .survey__slide-form
    margin 2em auto

  footer,
  footer a
    color text

  .errors
    color $warning_text

ul.list--survey
  position relative
  padding 0
  .course-list__col
    padding 0 1em

.table.list--survey
  position relative
  table-layout fixed

  td:first-child
    width 290px

.block.survey__submit-block
  overflow hidden
  text-align center
  .button
    float none

.highlight label.survey__multiple-choice-field
  background $warning-background
  border-color $warning_border

  &:before
    background $warning-background

.block.survey__slide-form
  overflow hidden

.survey__title
  font-size 21px
  color $text_dk

.survey__next span
  display inline-block
  vertical-align middle
  position relative
  &:first-child
    margin-right 10px
    top -1px

  &.icon
    top 1px
    background-position 0 0

.survey__multiple-choice-field
  .field_with_errors
    display inline-block

.survey__title-form
  input[type='text']
    width 400px

.survey__footer
  position fixed
  z-index 10
  bottom 0
  left 0
  right 0
  width 100%
  background white
  padding 1rem 0

.survey__progress__container
  position relative
  float right
  margin-left auto
  display flex
  align-items center
  gap 10px

  .survey__progress
    background lighten(sprout, 50%)
    width 200px
    height 20px
    border-radius 5px
    overflow hidden

    +above(tablet)
      margin-left auto

    &-bar
      position relative
      left 0
      top 0
      width 0%
      height 30px
      background sprout-dark
      transition width 500ms cubic-bezier(0.19, 1, 0.22, 1)

    &-percentage
      position absolute
      right 5px
      top 0
      line-height 20px
      font-size 12px
      color #fff
      font-weight bold

  .progress-label
    background #40ad90
    width fit-content
    color #fff
    font-size 75%
    padding 2px 6px
    border-radius 5px

