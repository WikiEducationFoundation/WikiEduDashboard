.survey-page .block.survey__question--matrix
  &.highlight
    .survey__question-row.required.highlight
      background $warning-background
      border-color $warning_border
      .survey__multiple-choice-field__radio-circle
        border-color warning

  &.rangeinput.highlight .survey__question-row.required.highlight
    background none
    .noUi-background
      border-color $warning_border
      background $warning-background

  .survey__question-text,
  .survey__multiple-choice-field
    display inline-block

  .survey__block-nav
    // padding-top 40px
    padding 40px 20px 0
    +above(tablet)
      padding 40px 0 0

  .survey__question-text
    width 200px
    font-weight 600
    font-size 16px
    line-height 1.3
    margin-bottom 10px
    margin-left 20px
    +above(tablet)
      margin-left 0

    label
      font-weight 600
      +above(tablet)
        font-weight 400

  .survey__question-text--matrix
    font-weight 600
    display none
    color $text_dk
    padding-left 20px
    +above(tablet)
      font-size 21px
      line-height 28px
    &:first-child
      display block
      margin-bottom 20px

  &.rangeinput .range-input
    padding 0 20px


  .survey__question-row.first
    padding-bottom $spacer * 2
    display none
    +above(tablet)
      display flex

  .survey__question-row
    padding 20px 0 30px 0
    border-bottom $border_med 1px solid

    +above(tablet)
      padding 10px 0 0px 20px
      display flex

    .survey__question-required
      display none

    &.odd
      background rgba(athens, .3)

    .label
      text-align left
      +above(tablet)
        text-align center
        position absolute
        color transparent
        padding 0
        top 0
        left 50%
        transform translate(-50%, 0)
        &:before
          left 50%
          transform translate(-50%, -10px)

    &.first .label
      color $text_dk
      left 50%
      transform translate(-50%, 0%)

    &.first .survey__question-text
      visibility hidden

  .survey__multiple-choice-field
    text-align center
    background none
    border none
    display block
    margin-bottom 0
    // &:nth-child(odd)
    //   background athens

    +above(tablet)
      flex 1
      display flex
      align-items center
      justify-content center
      margin-bottom 10px

    .label:after
      display none

    .label:before
      width 15px
      height 15px
      border-color $text_dk

    input[type=radio]
      display none

    input[type=radio]:checked + .label
      background none
      color $text_dk
      +above(tablet)
        color transparent

    input[type=radio]:checked + .label:before
      border-color $brand_primary
      background $brand_primary

  .survey__multiple-choice-field__option
    width 100%
    white-space pre-wrap
    font-size 14px
    line-height 18px

  .survey__multiple-choice-field__radio-circle
    border-color $text_dk
    transform translate(-50%, -50%)
    width 17px
    height 17px
    left 30px
    +above(tablet)
      left 50%

  .survey__multiple-choice-field:before
    display none

  .survey__multiple-choice-field .label
    padding-left 50px
    background none
    border-top 1px solid $border_med
    +above(tablet)
      padding-left 0
      border-top none

  .survey__question-row .survey__multiple-choice-field .label
    +above(tablet)
      color transparent
      width 100%

  .survey__question-row.first .survey__multiple-choice-field .label,
  .survey__question-row:first-child .survey__multiple-choice-field .label
    color $text_dk

.survey__question--matrix__options > div
  display inline-block

.block.survey__question--matrix.rangeinput
  .survey__question-row
    display block
    padding 10px 15px 0px 15px
