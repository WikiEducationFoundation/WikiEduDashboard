- content_for :head do
  = stylesheet_link_tag fingerprinted("/assets/stylesheets/#{rtl? ? 'rtl/' : nil}", 'main.css'), media: 'all'

!!!
%html{ dir: rtl? ? "rtl" : nil }
  = render "shared/head"
  %body.home
    %div
      = render "shared/nav"
      %main
        - if flash[:notice]
          .notification= flash[:notice]
        = yield
    = render "shared/foot"
