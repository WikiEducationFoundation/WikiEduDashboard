  = dashboard_stylesheet_tag("main")

- content_for :javascripts do 
  = hot_javascript_tag("main")
  = render "shared/vega"

!!!
%html{ dir: rtl? ? "rtl" : nil}
  = render "shared/head"
  %body{class: body_class(request)}
    = render "shared/flash"
    %div.wrapper
      #nav_root{"data-rooturl" => main_app.root_url, "data-logopath" => logo_path, "data-fluid" => "false", "data-exploreurl" =>  main_app.explore_path, "data-explorename" => t(Features.wiki_ed? ? "application.explore" : "courses_generic.explore"), "data-usersignedin" => user_signed_in?.to_s, "data-ifadmin" => current_user&.admin?.to_s, "data-trainingurl": main_app.training_url, "data-help_disabled" => Features.disable_help?.to_s, "data-user_permissions" => permissions, "data-wiki_ed" => Features.wiki_ed?.to_s, "data-language_switcher_enabled" => language_switcher_enabled, "data-username" => current_user&.username, "data-destroyurl" => main_app.destroy_user_session_url, "data-omniauth_url" => main_app.user_mediawiki_omniauth_authorize_url}
      %main#main{"data-user-id" => current_user&.id, :role => "main"}
        = yield
      .push
    = render "shared/foot"
