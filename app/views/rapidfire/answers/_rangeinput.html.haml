= render partial: "rapidfire/answers/errors", locals: {answer: answer}
= render partial: "rapidfire/answers/question_text", locals: {f: f, answer: answer}
- min = answer.question.validation_rules[:range_minimum].to_i
- max = answer.question.validation_rules[:range_maximum].to_i
- inc = answer.question.validation_rules[:range_increment].to_i
- divisions = answer.question.validation_rules[:range_divisions]
- format = answer.question.validation_rules[:range_format]
- range = min..max
.range-input
  %div{"data-divisions" => divisions, "data-format" => format, "data-max" => max, "data-min" => min, "data-range" => "", "data-step" => inc}
  = f.number_field :answer_text, :required => required_question?(answer), :data => {:range_field => true}, tabindex:'-1'
