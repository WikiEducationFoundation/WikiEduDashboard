%aside
  .container
    .logo
      %a.logo__link{:href => "/"}= logo_tag
    .home
      = link_to t('application.home'), root_url
      - if current_user && current_user.admin?
        = link_to t('application.recent_activity'), '/recent-activity'
    - if user_signed_in?
      .search
        = form_tag("/ask", method: "get", target: '_blank') do
          = text_field_tag(:q, '', placeholder: t('application.search'))
          = submit_tag(t('application.help'))
    .login
      - if user_signed_in?
        %b>= link_to current_user.wiki_id, :root
        = link_to I18n.t('application.log_out'), :destroy_user_session
      - else
        = link_to user_omniauth_authorize_path(:mediawiki_signup) do
          %i.icon.icon-wiki-logo
          Sign up
          %span.expand with Wikipedia
        = link_to user_omniauth_authorize_path(:mediawiki) do
          %i.icon.icon-wiki-logo
          Log in
          %span.expand with Wikipedia
