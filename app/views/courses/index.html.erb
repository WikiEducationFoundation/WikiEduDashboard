<% content_for :after_title do " - #{@presenter.cohort.title}" end %>

<header class="main-page">
  <div class="container">
    <h1><%= Figaro.env.dashboard_title %></h1>
    <%= render 'header_stats', presenter: @presenter %>
  </div>
</header>

<div class="container">
  <% if user_signed_in? %>
    <%= render 'submitted_courses', presenter: @presenter %>
    <%= render 'user_courses', presenter: @presenter %>
  <% end %>

  <%= render 'cohort_courses', presenter: @presenter %>
</div>
