<li class="row course-list__row">
  <%= link_to course_slug_path(course.slug), 'id' => course.id do %>
    <div class="row__wrapper">
      <div class="course-list__row__title">
        <p class="<%= user ? 'u' : '' %>title"><%= course.title %></p>
      </div>

      <div class="course-list__row__revisions">
        <% revisions = RevisionStat.get_records(course.id) %>
        <p><span class="tablet-only-flex"><%= t("metrics.revisions") %>: </span><%= revisions %></p>
        <p class="<%= user ? 'u' : '' %>revisions hidden"><%= revisions %></p>
      </div>

      <div class="course-list__row__characters">
        <p><span class="tablet-only-flex"><%= t("metrics.word_count") %>: </span><%= number_to_human word_count_from_character_sum course.character_sum %></p>
        <p class="<%= user ? 'u' : '' %>characters hidden"><%= course.character_sum %></p>
      </div>
      <div class="course-list__row__views">
        <p><span class="tablet-only-flex"><%= t("metrics.view") %>: </span><%= number_to_human course.view_sum %></p>
        <p class="<%= user ? 'u' : '' %>views hidden"><%= course.view_sum %></p>
      </div>
      <div class="course-list__row__students">
        <p class="training"><span class="tablet-only-flex"><%= t("users.editors") %>: </span><%= course.user_count %></p>
        <small class="training desktop-only-flex"><%= t("users.training_complete_count", count: course.trained_count) %></small>
        <p class="<%= user ? 'u' : '' %>students hidden"><%= course.user_count %></p>
      </div>
    </div>
  <% end %>
</li>
