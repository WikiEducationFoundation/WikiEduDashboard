<div class="container">
  <br><br><br><br><br>
  <h3>
    Wikipedia Training for <%= @library.slug.humanize.titleize %>
  </h3>
  <p><%= @library.introduction %>
  <ul>
    <%- @library.categories.each do |lib_category| %>
      <li>
        <h2><%= lib_category['title'] %></h2>
        <p><%= lib_category['description'] %></p>
        <ul>
          <%- lib_category['modules'].each do |lib_module| %>
            <li>
              <a href=<%= "#{@library.slug}/#{lib_module.slug}" %>>
                <h3><%= lib_module['name'] %></h3>
                <p><%= lib_module['description'] %></p>
              </a>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
